{
  "version": 8,
  "name": "OpenStreetMap Carto + Geoid Tiles",
  "metadata": {"maputnik:renderer": "mbgljs"},
  "sources": {
    "openstreetmap": {
      "type": "raster",
      "tiles": ["https://osm-carto-tiles.geolonia.com/{z}/{x}/{y}.png"],
      "minzoom": 0,
      "maxzoom": 19,
      "attribution": "&copy; <a href=\"https://www.openstreetmap.org/copyright\">OpenStreetMap</a> Contributors",
      "tileSize": 256
    },
    "geoid": {
      "type": "vector",
      "url": "https://tileserver-dev.geolonia.com/geoid/tiles.json?key=YOUR-API-KEY"
    }
  },
  "light": {
    "anchor": "viewport",
    "intensity": 1
  },
  "layers": [
    {"id": "opensteetmap", "type": "raster", "source": "openstreetmap"},
    {
      "id": "geoid-tiles",
      "type": "fill",
      "source": "geoid",
      "source-layer": "geoid",
      "paint": {
        "fill-color": ["case", ["boolean", ["feature-state", "hover"], false], "#f00", "#0f0"],
        "fill-opacity": 0.4
      }
    },
    {
      "id": "geoid-tiles-outline",
      "type": "line",
      "source": "geoid",
      "source-layer": "geoid",
      "paint": {
        "line-color": ["case", ["boolean", ["feature-state", "hover"], false], "#f00", "#0f0"],
        "line-opacity": 0.8
      }
    }
  ],
  "id": "geoid-vt-proxy-map"
}
